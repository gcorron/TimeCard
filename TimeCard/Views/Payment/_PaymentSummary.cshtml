@model TimeCard.ViewModels.PaymentViewModel
<div class="row mt-3" style="max-height:450px; overflow-y:auto; position:relative;">
    <div class="col-md-12">
        <table class="table table-sm table-striped table-hover">
            <thead class="sticky">
                <tr>
                    <th style="width:15%;">Client</th>
                    <th style="width:15%;">Project</th>
                    <th style="width:7%;">Bill Type</th>
                    <th style="width:7%;">Billed</th>
                    <th style="width:7%;">Paid</th>
                    <th style="width:7%;">Balance</th>
                    <th>Starting Date</th>
                </tr>
            </thead>
            <tbody>
                @{ foreach (var summary in Model.PaymentSummary)
                    {
                        <tr class="summary-row" data-edit="@(Json.Encode(new  { summary.JobId }))">
                            <td>@summary.Client</td>
                            <td >@summary.Project</td>
                            <td>@summary.BillType</td>
                            <td>@summary.Billed</td>
                            <td>@summary.Paid</td>
                            <td>@summary.Balance</td>
                            <td>@summary.StartDate</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<script>
    $(function () {
        $(".summary-row").css("cursor", "pointer");
        $(".summary-row").click(function () {
            id = $(this).data("edit").JobId;
            console.log(id);
            $("#@Html.IdFor(m => m.SelectedJobId)").val(id);
            $("#formPayment").submit();
            $('a[href="#edit"]').tab("show");
        });

    });

</script>
